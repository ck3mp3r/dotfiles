#!/usr/bin/env nu

# run nix-darwin switch
def 'main switch' [] {
  let user = ($env.USER | str replace "." "_")
  (
    sudo nix run nix-darwin
    --extra-experimental-features nix-command
    --extra-experimental-features flakes --
    switch --impure --flake $"($env.HOME)/.config/dotfiles#($user)"
  )
}

# prune unnused derivations
def 'main prune' [] {
  nix-collect-garbage
}

# update flake lock
def 'main flake-update' [] {
  cd ($env.FILE_PWD | path dirname)
  nix flake update
  cd -
}

# update dotfiles
def 'main update' [] {
  cd ($env.FILE_PWD | path dirname)
  git pull origin main
  cd -
}

# use this to fix a corrupted nix store
def 'main fix-store' [] {
  sudo nix-store --repair --verify --check-contents
}

# backup existing zsh config files before nix-darwin setup
def 'main backup-zsh' [] {
  sudo mv /etc/zshrc /etc/zshrc.before-nix-darwin
  sudo mv /etc/zprofile /etc/zprofile.before-nix-darwin
}

def main [] {
  help main
}
